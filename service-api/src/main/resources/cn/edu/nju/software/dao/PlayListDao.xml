<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.nju.software.dao.PlayListRelationDao">

    <sql id="fields">
        id,
        worksId,
        playListId,
        userId,
        createTime,
        updateTime
    </sql>

    <insert id="savePlayListRelation" parameterType="cn.edu.nju.software.entity.PlayListRelation" keyProperty="id" useGeneratedKeys="true">
        insert into playList_relation(
        <include refid="fields"></include>
        )
        VALUES
        (
        #{id},
        #{worksId},
        #{playListId},
        #{userId},
        #{createTime},
        #{updateTime}
        )
    </insert>

    <delete id="deletePlayListRelationById">
        DELETE FROM playList_relation
        WHERE id = #{0}
    </delete>

    <delete id="deletePlayListRelationByPrimaryId">
        DELETE FROM playList_relation
        WHERE worksId = #{0} and playListId = #{1} and userId = #{2}
    </delete>


    <select id="getWorksPlayListIdAndUserById" resultType="cn.edu.nju.software.entity.PlayListRelation">
        select
        <include refid="fields"></include>
        from playList_relation
        where id=#{0} and playListId = #{1} and userId=#{2}
    </select>

    <select id="getWorksIdListByPlayListIdAndUserId" resultType="java.lang.Integer">
        select distinct
        storyId
        from playList_relation
        where playListId = #{0} and userId=#{1}
    </select>

    <select id="getPlayListIdAndUserIdListByWorksId" resultType="java.lang.Integer">
        select distinct
        albumId
        from playList_relation
        where storyId = #{0}
    </select>

    <select id="getWorksIdListByPlayListIdAndUserIdList" resultType="java.lang.Integer">
        select distinct
        storyId
        from playList_relation
        where albumId in
        <foreach collection="idList" item="id" index="index" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


</mapper>